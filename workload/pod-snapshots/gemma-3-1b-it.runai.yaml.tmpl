---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: vllm-gemma-3-1b-it
spec:
  replicas: 1
  selector:
    matchLabels:
      app: vllm-gemma-3-1b-it
  template:
    metadata:
      labels:
        app: vllm-gemma-3-1b-it
    spec:
      serviceAccountName: $KSA
      runtimeClassName: gvisor
      containers:
        - name: inference-server
          image: vllm/vllm-openai:v0.12.0
          resources:
            requests:
              cpu: "2"
              memory: "25Gi"
              ephemeral-storage: 10Gi
              nvidia.com/gpu: "1"
            limits:
              cpu: "2"
              memory: "25Gi"
              ephemeral-storage: 10Gi
              nvidia.com/gpu: "1"
          command: ["/bin/sh", "-c"]
          args:
            - |
              #!/bin/sh
              set -ex

              VLLM_PID=0

              # --- Signal Handler ---
              term_handler() {
                echo "Wrapper script received SIGTERM."
                if [ "$VLLM_PID" -ne 0 ]; then
                  echo "Sending SIGTERM to vLLM server (PID: $VLLM_PID)..."
                  kill -TERM "$VLLM_PID"
                  # Wait for the process to terminate
                  wait "$VLLM_PID" || true
                  echo "vLLM server terminated."
                fi
                exit 143 # 128 + 15 (SIGTERM)
              }
              # Trap SIGTERM and SIGINT
              trap term_handler TERM INT

              # --- Start vLLM in background ---
              echo "Starting vLLM server in background..."
              /usr/local/bin/vllm serve \
                --model=gs://$MODEL_BUCKET/$MODEL_ID \
                --tensor-parallel-size=1 \
                --served-model-name=$MODEL_ID \
                --load-format=runai_streamer \
                --model-loader-extra-config='{"distributed":true}' \
                --host=0.0.0.0 \
                --port=8000 \
                --disable-log-stats &
              VLLM_PID=$!
              echo "vLLM server started with PID $VLLM_PID"

              # --- Health Check Loop ---
              HEALTH_URL="http://localhost:8000/health"
              echo "Waiting for vLLM server to be ready at $HEALTH_URL..."
              for i in $(seq 1 360); do
                if curl -sSf $HEALTH_URL > /dev/null; then
                  echo "vLLM server is ready."
                  break
                fi
                if ! kill -0 $VLLM_PID > /dev/null 2>&1; then
                  echo "vLLM server process (PID $VLLM_PID) exited prematurely."
                  wait $VLLM_PID || true # Capture exit code
                  exit 1
                fi
                if [ $i -eq 360 ]; then
                  echo "Timed out waiting for vLLM server to become healthy."
                  kill -TERM $VLLM_PID || true
                  exit 1
                fi
                sleep 5
              done

              # --- Trigger Checkpoint ---
              CHECKPOINT_PATH="/proc/gvisor/checkpoint"
              if [ -f "$CHECKPOINT_PATH" ]; then
                echo "Triggering gVisor checkpoint..."
                if echo 1 > "$CHECKPOINT_PATH"; then
                  echo "Checkpoint trigger command sent successfully."
                else
                  echo "Failed to write to $CHECKPOINT_PATH."
                fi
              else
                echo "gVisor checkpoint path $CHECKPOINT_PATH not found."
              fi

              # --- Wait for vLLM termination ---
              echo "Wrapper script now waiting for vLLM server (PID $VLLM_PID) to terminate..."
              wait $VLLM_PID
              VLLM_EXIT_CODE=$?
              echo "vLLM server exited with code $VLLM_EXIT_CODE"
              exit $VLLM_EXIT_CODE
          volumeMounts:
            - mountPath: /dev/shm
              name: dshm
          ports:
            - containerPort: 8000
              name: http
              protocol: TCP
          lifecycle:
            preStop:
              sleep:
                seconds: 30
          livenessProbe:
            httpGet:
              path: /health
              port: http
              scheme: HTTP
            periodSeconds: 1
            successThreshold: 1
            failureThreshold: 5
            timeoutSeconds: 1
          readinessProbe:
            httpGet:
              path: /health
              port: http
              scheme: HTTP
            periodSeconds: 1
            successThreshold: 1
            failureThreshold: 1
            timeoutSeconds: 1
          startupProbe:
            failureThreshold: 3600
            initialDelaySeconds: 2
            periodSeconds: 1
            httpGet:
              path: /health
              port: http
              scheme: HTTP
      volumes:
        - name: dshm
          emptyDir:
              medium: Memory
      nodeSelector:
        cloud.google.com/compute-class: l4-gpu-cc
  strategy:
    type: Recreate
---
apiVersion: v1
kind: Service
metadata:
  name: vllm-gemma-3-1b-it
spec:
  selector:
    app: vllm-gemma-3-1b-it
  type: ClusterIP
  ports:
    - protocol: TCP
      port: 8000
      targetPort: 8000
---
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: vllm-gemma-3-1b-it
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: vllm-gemma-3-1b-it
  minReplicas: 1
  maxReplicas: 3
  behavior:
    scaleDown:
      stabilizationWindowSeconds: 60
  metrics:
    - pods:
        metric:
          ## TODO : Identify the correct Prometheus metric exposed by vLLM
          name: prometheus.googleapis.com|vllm:num_requests_waiting|gauge
        target:
          averageValue: 10
          type: AverageValue
      type: Pods